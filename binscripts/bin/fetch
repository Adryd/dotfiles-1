#!/bin/sh

bk_red="\033[41m"
bk_grn="\033[42m"
bk_ylw="\033[43m"
bk_blu="\033[44m"
bk_mag="\033[45m"
bk_cyn="\033[46m"
col_reset="\033[0m"

pkg=$(pacman -Q | wc -l)
hdd=$(df -h | grep sda2 | awk '{ print $4 }')

echo
printf " %bpkg%b %d installed\n" "$bk_red" "$col_reset" "$pkg"
printf " %bhdd%b %s available\n" "$bk_ylw" "$col_reset" "$hdd"
echo
