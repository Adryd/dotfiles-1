# term
super + Return
  st

# reload
super + Escape
  pkill -USR1 -x sxhkd

# scrn
Print
  sh -c "maim --nokeyboard -s ~/Screenshots/$(date +%F-%T).png"

# quit
super + alt + Escape
  pkill -x panel; bspc quit

# kill
super + {_,shift + }w
	bspc node -{c,k}

# dmenu (requires dmenux)
super + d
  ~/.config/sxhkd/dmenu

# type
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# focus nodes
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# switch desktops
super + bracket{left,right}
  bspc desktop -f {prev,next}

# volume
XF86Audio{Raise,Lower}Volume
  amixer set Master 3%{+,-} unmute
XF86AudioMute
  amixer set Master 0

# brightness
XF86MonBrightness{Up,Down}
  xbacklight {-inc,-dec} 5%

# focus screen/move window to given desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'
